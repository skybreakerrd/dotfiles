mod4 + l
    i3lock -c 000000
# Multimedia
XF86AudioPrev
    playerctl previous

mod4 + F6
    playerctl previous

XF86AudioPlay
    playerctl play-pause

mod4 + F7
    playerctl play-pause

XF86AudioNext
    playerctl next

mod4 + F8
    playerctl next

XF86AudioRaiseVolume
    amixer -D pulse sset Master 2%+

mod4 + F11
    amixer -D pulse sset Master 2%+

XF86AudioLowerVolume
    amixer -D pulse sset Master 2%-

mod4 + F10
    amixer -D pulse sset Master 2%-

XF86AudioMute
    amixer -D pulse sset Master toggle

mod4 + F10
    amixer -D pulse sset Master toggle

